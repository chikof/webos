{
	"name": "@kaname-png/revoltx",
	"version": "1.1.0",
	"description": "RevoltX is a framework for creating Revolt bots.",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"author": "@sapphire",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"lint": "eslint src tests --ext ts --fix",
		"format": "prettier --write {src,tests}/**/*.ts",
		"docs": "typedoc",
		"test": "jest",
		"test:watch": "jest --watch",
		"update": "yarn upgrade-interactive",
		"build": "tsc -b src",
		"clean": "tsc -b src --clean",
		"watch": "tsc -b src -w",
		"sversion": "standard-version",
		"commit": "git-cz",
		"cz": "git-cz",
		"prepublishOnly": "yarn build",
		"prepare": "husky install .github/husky"
	},
	"dependencies": {
		"@sapphire/pieces": "^3.2.0",
		"@sapphire/result": "^1.0.0",
		"@sapphire/utilities": "^3.3.0",
		"lexure": "^0.17.0",
		"tslib": "^2.3.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^16.2.1",
		"@commitlint/config-conventional": "^16.2.1",
		"@sapphire/eslint-config": "^4.2.2",
		"@sapphire/prettier-config": "^1.3.0",
		"@sapphire/ts-config": "^3.3.1",
		"@types/jest": "^27.4.1",
		"@types/node": "^17.0.21",
		"@typescript-eslint/eslint-plugin": "^5.13.0",
		"@typescript-eslint/parser": "^5.13.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.10.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^7.0.4",
		"jest": "^27.5.1",
		"jest-circus": "^27.5.1",
		"lint-staged": "^12.3.4",
		"prettier": "^2.5.1",
		"pretty-quick": "^3.1.3",
		"revolt-api": "^0.5.3-alpha.12",
		"revolt.js": "^5.2.8",
		"standard-version": "^9.3.2",
		"ts-jest": "^27.1.3",
		"ts-node": "^10.6.0",
		"typedoc": "^0.22.12",
		"typedoc-plugin-mdn-links": "^1.0.5",
		"typescript": "^4.6.2"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kaname-png/revoltx.git"
	},
	"files": [
		"dist",
		"!dist/*.tsbuildinfo"
	],
	"engines": {
		"node": ">=v14.0.0",
		"npm": ">=7.0.0"
	},
	"keywords": [
		"@kaname-png/revoltx",
		"revolt",
		"bot",
		"typescript",
		"ts",
		"yarn",
		"sapphire"
	],
	"bugs": {
		"url": "https://github.com/kaname-png/revoltx/issues"
	},
	"homepage": "https://www.sapphirejs.dev",
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"resolutions": {
		"jest-environment-jsdom": "https://registry.yarnpkg.com/@favware/skip-dependency/-/skip-dependency-1.1.3.tgz"
	},
	"prettier": "@sapphire/prettier-config",
	"packageManager": "yarn@3.2.0"
}
